<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/twenty"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvFacilityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/imgCheck"
        android:layout_toRightOf="@+id/tvId"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvFacilityHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvFacilityName"
        android:layout_below="@+id/tvFacilityName"
        android:layout_toRightOf="@+id/tvId"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imgCheck"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvFacilityName"
        android:src="@drawable/rightarrow" />

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvFacilityHome"
        android:layout_alignParentLeft="true"
        android:text="Id"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>